<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="cataloginventory_stock_item" resource="default" comment="Cataloginventory Stock Item">
        <column xsi:type="smallint" name="deferred_stock_update" padding="5" unsigned="true" nullable="false"
                identity="false" default="0" comment="Use deferred Stock update"/>
        <column xsi:type="smallint" name="use_config_deferred_stock_update" padding="5" unsigned="true" nullable="false"
                identity="false" default="1" comment="Use configuration settings for deferred Stock update"/>
    </table>
</schema>
