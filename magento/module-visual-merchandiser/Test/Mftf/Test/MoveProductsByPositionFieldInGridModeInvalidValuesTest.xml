<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="MoveProductsByPositionFieldInGridModeInvalidValuesTest">
        <annotations>
            <features value="VisualMerchandiser"/>
            <stories value="[Visual Merchandiser] Assign/Unassign products to/from a category"/>
            <title value="[Visual Merchandiser] Admin should be able to move assigned product position in the category by editing Position field in grid mode - invalid values"/>
            <description value="[Visual Merchandiser] Admin should be able to move assigned product position in the category by editing Position field in grid mode - invalid values"/>
            <severity value="MAJOR"/>
            <testCaseId value="MC-3023"/>
            <group value="VisualMerchandiser"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="login"/>
            <createData entity="_defaultCategory" stepKey="category"/>
            <createData entity="ApiSimpleProduct" stepKey="product1">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product2">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product3">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product4">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product5">
                <requiredEntity createDataKey="category"/>
            </createData>
        </before>
        <after>
            <actionGroup ref="logout" stepKey="logout"/>
            <deleteData createDataKey="product1" stepKey="deleteProduct1"/>
            <deleteData createDataKey="product2" stepKey="deleteProduct2"/>
            <deleteData createDataKey="product3" stepKey="deleteProduct3"/>
            <deleteData createDataKey="product4" stepKey="deleteProduct4"/>
            <deleteData createDataKey="product5" stepKey="deleteProduct5"/>
            <deleteData createDataKey="category" stepKey="deleteCategory"/>
        </after>

        <actionGroup ref="goToAdminCategoryPageById" stepKey="goToAdminCategoryPage1">
            <argument name="id" value="$$category.id$$"/>
        </actionGroup>
        <actionGroup ref="OpenProductsInCategorySection" stepKey="OpenProductsInCategorySection1"/>
        <actionGroup ref="DisableMatchProductsByRule" stepKey="DisableMatchProductsByRule1"/>
        <actionGroup ref="SortProductsByCriteriaInCategory" stepKey="SelectSortOrderInProductInCategory1">
            <argument name="criteria" value="Newest products first"/>
        </actionGroup>
        <actionGroup ref="SwitchToGridModeProductInCategory" stepKey="switchToGrid1"/>
        <click selector="{{AdminCategoryMainActionsSection.SaveButton}}" stepKey="saveCategoryWithProducts1"/>

        <!-- Invalid position "One" -->
        <actionGroup ref="OpenProductsInCategorySection" stepKey="OpenProductsInCategorySection21"/>
        <actionGroup ref="MoveProductByPositionFieldGridMode" stepKey="MoveProductByPositionFieldGridMode2">
            <argument name="rowFrom" value="3"/>
            <argument name="rowTo" value="One"/>
        </actionGroup>
        <click selector="{{AdminCategoryMainActionsSection.SaveButton}}" stepKey="saveCategoryWithProducts2"/>
        <actionGroup ref="OpenProductsInCategorySection" stepKey="OpenProductsInCategorySection22"/>
        <!-- Assert no change in position -->
        <see userInput="$$product4.id$$" selector="{{AdminCategoryProductsGridSection.rowId('2')}}" stepKey="seeRowId21"/>
        <see userInput="$$product3.id$$" selector="{{AdminCategoryProductsGridSection.rowId('3')}}" stepKey="seeRowId22"/>
        <see userInput="$$product2.id$$" selector="{{AdminCategoryProductsGridSection.rowId('4')}}" stepKey="seeRowId23"/>

        <!-- Invalid position "-1" -->
        <actionGroup ref="MoveProductByPositionFieldGridMode" stepKey="MoveProductByPositionFieldGridMode3">
            <argument name="rowFrom" value="3"/>
            <argument name="rowTo" value="-1"/>
        </actionGroup>
        <click selector="{{AdminCategoryMainActionsSection.SaveButton}}" stepKey="saveCategoryWithProducts3"/>
        <actionGroup ref="OpenProductsInCategorySection" stepKey="OpenProductsInCategorySection3"/>
        <!-- Assert no change in position -->
        <see userInput="$$product4.id$$" selector="{{AdminCategoryProductsGridSection.rowId('2')}}" stepKey="seeRowId31"/>
        <see userInput="$$product3.id$$" selector="{{AdminCategoryProductsGridSection.rowId('3')}}" stepKey="seeRowId32"/>
        <see userInput="$$product2.id$$" selector="{{AdminCategoryProductsGridSection.rowId('4')}}" stepKey="seeRowId33"/>

        <!-- Invalid position "1.2" -->
        <actionGroup ref="MoveProductByPositionFieldGridMode" stepKey="MoveProductByPositionFieldGridMode4">
            <argument name="rowFrom" value="3"/>
            <argument name="rowTo" value="1.2"/>
        </actionGroup>
        <click selector="{{AdminCategoryMainActionsSection.SaveButton}}" stepKey="saveCategoryWithProducts4"/>
        <actionGroup ref="OpenProductsInCategorySection" stepKey="OpenProductsInCategorySection4"/>
        <!-- Assert no change in position -->
        <see userInput="$$product4.id$$" selector="{{AdminCategoryProductsGridSection.rowId('2')}}" stepKey="seeRowId41"/>
        <see userInput="$$product3.id$$" selector="{{AdminCategoryProductsGridSection.rowId('3')}}" stepKey="seeRowId42"/>
        <see userInput="$$product2.id$$" selector="{{AdminCategoryProductsGridSection.rowId('4')}}" stepKey="seeRowId43"/>

        <!-- Invalid position "<script>alert('Injected!');</script>" -->
        <actionGroup ref="MoveProductByPositionFieldGridMode" stepKey="MoveProductByPositionFieldGridMode5">
            <argument name="rowFrom" value="3"/>
            <argument name="rowTo" value="&lt;script&gt;alert(&apos;Injected!&apos;);&lt;/script&gt;"/>
        </actionGroup>
        <click selector="{{AdminCategoryMainActionsSection.SaveButton}}" stepKey="saveCategoryWithProducts5"/>
        <actionGroup ref="OpenProductsInCategorySection" stepKey="OpenProductsInCategorySection5"/>
        <!-- Assert no change in position -->
        <see userInput="$$product4.id$$" selector="{{AdminCategoryProductsGridSection.rowId('2')}}" stepKey="seeRowId51"/>
        <see userInput="$$product3.id$$" selector="{{AdminCategoryProductsGridSection.rowId('3')}}" stepKey="seeRowId52"/>
        <see userInput="$$product2.id$$" selector="{{AdminCategoryProductsGridSection.rowId('4')}}" stepKey="seeRowId53"/>
    </test>
</tests>
