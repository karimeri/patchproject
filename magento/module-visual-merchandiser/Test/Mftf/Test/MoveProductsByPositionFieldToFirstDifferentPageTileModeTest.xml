<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="MoveProductsByPositionFieldToFirstDifferentPageTileModeTest">
        <annotations>
            <features value="VisualMerchandiser"/>
            <stories value="[Visual Merchandiser] Assign/Unassign products to/from a category"/>
            <title value="[Visual Merchandiser] Admin should be able to move assigned product position in the category by editing Position field in tile mode - move to 1st across different pages"/>
            <description value="[Visual Merchandiser] Admin should be able to move assigned product position in the category by editing Position field in tile mode - move to 1st across different pages"/>
            <severity value="MAJOR"/>
            <testCaseId value="MC-3050"/>
            <group value="VisualMerchandiser"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="login"/>
            <createData entity="_defaultCategory" stepKey="category"/>
            <!-- Create 23 products so that tile can have more than one page -->
            <createData entity="ApiSimpleProduct" stepKey="product1">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product2">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product3">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product4">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product5">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product6">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product7">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product8">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product9">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product10">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product11">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product12">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product13">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product14">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product15">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product16">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product17">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product18">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product19">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product20">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product21">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product22">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="product23">
                <requiredEntity createDataKey="category"/>
            </createData>
        </before>
        <after>
            <actionGroup ref="goToAdminCategoryPageById" stepKey="goToAdminCategoryPage0">
                <argument name="id" value="$$category.id$$"/>
            </actionGroup>
            <actionGroup ref="OpenProductsInCategorySection" stepKey="OpenProductsInCategorySection0"/>
            <actionGroup ref="SwitchToGridModeProductInCategory" stepKey="switchToGrid"/>
            <actionGroup ref="logout" stepKey="logout"/>
            <deleteData createDataKey="product1" stepKey="deleteProduct1"/>
            <deleteData createDataKey="product2" stepKey="deleteProduct2"/>
            <deleteData createDataKey="product3" stepKey="deleteProduct3"/>
            <deleteData createDataKey="product4" stepKey="deleteProduct4"/>
            <deleteData createDataKey="product5" stepKey="deleteProduct5"/>
            <deleteData createDataKey="product6" stepKey="deleteProduct6"/>
            <deleteData createDataKey="product7" stepKey="deleteProduct7"/>
            <deleteData createDataKey="product8" stepKey="deleteProduct8"/>
            <deleteData createDataKey="product9" stepKey="deleteProduct9"/>
            <deleteData createDataKey="product10" stepKey="deleteProduct10"/>
            <deleteData createDataKey="product11" stepKey="deleteProduct11"/>
            <deleteData createDataKey="product12" stepKey="deleteProduct12"/>
            <deleteData createDataKey="product13" stepKey="deleteProduct13"/>
            <deleteData createDataKey="product14" stepKey="deleteProduct14"/>
            <deleteData createDataKey="product15" stepKey="deleteProduct15"/>
            <deleteData createDataKey="product16" stepKey="deleteProduct16"/>
            <deleteData createDataKey="product17" stepKey="deleteProduct17"/>
            <deleteData createDataKey="product18" stepKey="deleteProduct18"/>
            <deleteData createDataKey="product19" stepKey="deleteProduct19"/>
            <deleteData createDataKey="product20" stepKey="deleteProduct20"/>
            <deleteData createDataKey="product21" stepKey="deleteProduct21"/>
            <deleteData createDataKey="product22" stepKey="deleteProduct22"/>
            <deleteData createDataKey="product23" stepKey="deleteProduct23"/>
            <deleteData createDataKey="category" stepKey="deleteCategory"/>
        </after>
        <!-- Re-position without saving -->

        <!-- Go to admin category page -->
        <actionGroup ref="goToAdminCategoryPageById" stepKey="goToAdminCategoryPage1">
            <argument name="id" value="$$category.id$$"/>
        </actionGroup>
        <!-- Open products in category section -->
        <actionGroup ref="OpenProductsInCategorySection" stepKey="OpenProductsInCategorySection1"/>
        <!-- Prepare grid for testing -->
        <actionGroup ref="DisableMatchProductsByRule" stepKey="DisableMatchProductsByRule1"/>
        <actionGroup ref="SortProductsByCriteriaInCategory" stepKey="SelectSortOrderInProductInCategory1">
            <argument name="criteria" value="Newest products first"/>
        </actionGroup>
        <!-- Switch to tile mode -->
        <actionGroup ref="SwitchToTileModeProductInCategory" stepKey="switchToTile1"/>
        <!-- Save category and assert success message -->
        <click selector="{{AdminCategoryMainActionsSection.SaveButton}}" stepKey="saveCategoryWithProducts1"/>
        <see userInput="You saved the category" selector="{{AdminMessagesSection.nthSuccess('1')}}" stepKey="saveSuccess1"/>

        <!-- Open products in category section -->
        <actionGroup ref="OpenProductsInCategorySection" stepKey="OpenProductsInCategorySection2"/>
        <scrollTo selector="{{AdminCategoryProductsSection.sort}}" stepKey="scrollToArea2" />
        <waitForPageLoad stepKey="waitForPageLoad2"/>
        <!-- See total count 23 -->
        <see userInput="23" selector="{{AdminCategoryProductsTileSection.totalCount}}" stepKey="seeTotalCount2"/>
        <!-- Go to page 2 -->
        <click selector="{{AdminCategoryProductsTileSection.nextPage}}" stepKey="goToPage22"/>
        <!-- Move row 22 (page 2) to position 0 (page 1) -->
        <actionGroup ref="MoveProductByPositionFieldTileMode" stepKey="MoveProductByPositionFieldTileMode2">
            <argument name="tileFrom" value="2"/>
            <argument name="tileTo" value="0"/>
        </actionGroup>
        <!-- Assert new positions -->
        <see userInput="$$product4.name$$" selector="{{AdminCategoryProductsTileSection.nThProductInfo('1')}}" stepKey="seeTile21"/>
        <see userInput="$$product3.name$$" selector="{{AdminCategoryProductsTileSection.nThProductInfo('2')}}" stepKey="seeTile22"/>
        <see userInput="$$product1.name$$" selector="{{AdminCategoryProductsTileSection.nThProductInfo('3')}}" stepKey="seeTile23"/>
        <!-- Go to page 1 -->
        <click selector="{{AdminCategoryProductsTileSection.previousPage}}" stepKey="goToPage12"/>
        <see userInput="$$product2.name$$" selector="{{AdminCategoryProductsTileSection.nThProductInfo('1')}}" stepKey="seeTile24"/>
        <see userInput="$$product23.name$$" selector="{{AdminCategoryProductsTileSection.nThProductInfo('2')}}" stepKey="seeTile25"/>

        <!-- Go to storefront category page -->
        <actionGroup ref="GoToStorefrontCategoryPageByParameters" stepKey="GoToStorefrontCategoryPage2">
            <argument name="category" value="$$category.custom_attributes[url_key]$$"/>
            <argument name="mode" value="list"/>
            <argument name="numOfProductsPerPage" value="25"/>
            <argument name="sortBy" value="position"/>
        </actionGroup>
        <see userInput="$$product23.name$$" selector="{{StorefrontCategoryMainSection.lineProductName('1')}}" stepKey="seeProductNameLine21"/>
        <see userInput="$$product22.name$$" selector="{{StorefrontCategoryMainSection.lineProductName('2')}}" stepKey="seeProductNameLine22"/>
        <see userInput="$$product3.name$$" selector="{{StorefrontCategoryMainSection.lineProductName('21')}}" stepKey="seeProductNameLine23"/>
        <see userInput="$$product2.name$$" selector="{{StorefrontCategoryMainSection.lineProductName('22')}}" stepKey="seeProductNameLine24"/>
        <see userInput="$$product1.name$$" selector="{{StorefrontCategoryMainSection.lineProductName('23')}}" stepKey="seeProductNameLine25"/>

        <!-- Re-position with saving -->

        <!-- Go to admin category page -->
        <actionGroup ref="goToAdminCategoryPageById" stepKey="goToAdminCategoryPage3">
            <argument name="id" value="$$category.id$$"/>
        </actionGroup>
        <!-- Open products in category section -->
        <actionGroup ref="OpenProductsInCategorySection" stepKey="OpenProductsInCategorySection3"/>
        <scrollTo selector="{{AdminCategoryProductsSection.sort}}" stepKey="scrollToArea3" />
        <waitForPageLoad stepKey="waitForPageLoad3"/>
        <!-- Go to page 2 -->
        <click selector="{{AdminCategoryProductsTileSection.nextPage}}" stepKey="goToPage23"/>
        <!-- Move row 22 (page 2) to position 0 (page 1) -->
        <actionGroup ref="MoveProductByPositionFieldTileMode" stepKey="MoveProductByPositionFieldTileMode3">
            <argument name="tileFrom" value="2"/>
            <argument name="tileTo" value="0"/>
        </actionGroup>
        <!-- Assert new positions -->
        <see userInput="$$product4.name$$" selector="{{AdminCategoryProductsTileSection.nThProductInfo('1')}}" stepKey="seeTile31"/>
        <see userInput="$$product3.name$$" selector="{{AdminCategoryProductsTileSection.nThProductInfo('2')}}" stepKey="seeTile32"/>
        <see userInput="$$product1.name$$" selector="{{AdminCategoryProductsTileSection.nThProductInfo('3')}}" stepKey="seeTile33"/>
        <!-- Go to page 1 -->
        <click selector="{{AdminCategoryProductsTileSection.previousPage}}" stepKey="goToPage13"/>
        <see userInput="$$product2.name$$" selector="{{AdminCategoryProductsTileSection.nThProductInfo('1')}}" stepKey="seeTile34"/>
        <see userInput="$$product23.name$$" selector="{{AdminCategoryProductsTileSection.nThProductInfo('2')}}" stepKey="seeTile35"/>

        <!-- Save category and assert success message -->
        <click selector="{{AdminCategoryMainActionsSection.SaveButton}}" stepKey="saveCategoryWithProducts3"/>
        <see userInput="You saved the category" selector="{{AdminMessagesSection.nthSuccess('1')}}" stepKey="saveSuccess3"/>

        <!-- Go to storefront category page -->
        <actionGroup ref="GoToStorefrontCategoryPageByParameters" stepKey="GoToStorefrontCategoryPage3">
            <argument name="category" value="$$category.custom_attributes[url_key]$$"/>
            <argument name="mode" value="list"/>
            <argument name="numOfProductsPerPage" value="25"/>
            <argument name="sortBy" value="position"/>
        </actionGroup>
        <see userInput="$$product2.name$$" selector="{{StorefrontCategoryMainSection.lineProductName('1')}}" stepKey="seeProductNameLine31"/>
        <see userInput="$$product23.name$$" selector="{{StorefrontCategoryMainSection.lineProductName('2')}}" stepKey="seeProductNameLine32"/>
        <see userInput="$$product4.name$$" selector="{{StorefrontCategoryMainSection.lineProductName('21')}}" stepKey="seeProductNameLine33"/>
        <see userInput="$$product3.name$$" selector="{{StorefrontCategoryMainSection.lineProductName('22')}}" stepKey="seeProductNameLine34"/>
        <see userInput="$$product1.name$$" selector="{{StorefrontCategoryMainSection.lineProductName('23')}}" stepKey="seeProductNameLine35"/>
    </test>
</tests>
